@page
@model RazorWorkouts.Pages.RazorWorkout.IndexModel
@{
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Workout List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Workout</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.WorkoutSetsDisplay.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="WorkoutSetsDisplay.FirstOrDefault().WorkoutSetName"></label>
                        </th>
                      
                        <th>
                            <label>Count</label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.WorkoutSetsDisplay)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.WorkoutSetName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Count)
                            </td>
                     
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.WorkoutSetID" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.WorkoutSetID" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Workouts not present</p>
            }
        </form>
     </div>

</div>